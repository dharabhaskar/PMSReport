<mvc:View controllerName="com.infocus.PMSReport.controller.MainView" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" height="100%">
	<App id="idAppControl">
		<ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
			<FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
				<PDFViewer source="{/Source}" title="{/Title}" height="{/Height}">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</PDFViewer>
			</FlexBox>
		</ScrollContainer>
	</App>
</mvc:View>